{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>hmcts/.github:renovate-config",
    "local>hmcts/.github//renovate/automerge-all"
  ],
  "ignorePaths": [
    "cftlib/**",
    ".github/**"
  ],
  "schedule": [
    "after 4pm every weekday",
    "before 5pm every weekday",
    "every weekend"
  ],
  "git-submodules": {
    "enabled": true
  }
}
